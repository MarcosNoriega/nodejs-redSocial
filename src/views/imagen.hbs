<div class="card">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h3>{{imagen.nombre}}</h3>
        <button class="btn btn-danger" id="btn-borrar" data-id="{{imagen._id}}"><i id="icon-borrar" class="fa fa-trash-alt"></i> Borrar</button>
    </div>
    <div class="card-body">
        <img src="{{imagen.ruta}}" alt="" class="img-fluid">
    </div>
    <div class="card-footer d-flex justify-content-between aling-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{imagen._id}}">
            <i class="fa fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{imagen.likes}}</span>
             <i class="fa fa-heart"></i>
        </p>

        <p>
            <i class="fa fa-eye"></i> {{imagen.views}}
        </p>

        <p>
            <i class="fa fa-clock"></i> <span class="tiempo">{{imagen.timesteamp}}</span>
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comentarios"><i class="fa fa-comment"></i> publicar un comentario</button>
    </div>

    <div class="card-body">
        <blockquote id="comentar">
            <form action="/image/{{imagen._id}}/comentarios" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="nombre" id="" placeholder="Escribe tu nombre" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" id="" placeholder="Escribe tu email" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="comentario" id="" cols="30" rows="2" placeholder="Comentario" required></textarea>
                </div>
                <button type="submit" class="btn btn-success" id="btn-comentario"><i class="fa fa-comment"></i> Publicar</button>
            </form>
        </blockquote>

        <ul>
            {{#each comentarios}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="#" class="col-2"><img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt=""></a>

                        <blockquote class="col">
                            <p class="lead">{{comentario}}</p>
                            <footer>
                                {{nombre}} - <span class="tiempo">{{timestamp}}</span>
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
